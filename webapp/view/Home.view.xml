<mvc:View
    controllerName="vcpapp.vcpibpcalendarmaintenance.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:u="sap.ui.unified"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    core:require="{DateTimeType: 'sap/ui/model/type/DateTime'}"
>
    <Page
        id="pageCM"
        showHeader="false"
    >
        <!--     <Page id="page" title="{i18n>title}"> -->
        <!--     <headerContent>
<HBox id="idHBox100" alignItems="End" justifyContent="End" width="100%" visible="true">                                                                                                                                    
                                        </HBox>
    </headerContent>        -->
        <IconTabBar
            id="idTabBarCM"
            expandable="false"
            select="onTabSelected"
        >
            <!-- First Tab - Calendar Maintenance -->
            <items>
                <IconTabFilter
                    id="_IDGenIconTabFilterCM"
                    text="Calendar Maintenance"
                    key="Calendar"
                >

                    <VBox id="_IDGenVBox1CM">

                        <Table
                            id="idTabCM"
                            items="{path: '/results', sorter:[{path:'TPLEVEL'},{path:'TempID'}]}"
                            growingScrollToLoad="true"
                            growingThreshold="1000"
                            growing="true"
                            rememberSelections="false"
                            itemPress="onhandlePress"
                            mode="None"
                            selectionChange="onhandlePress"
                            sticky="ColumnHeaders"
                        >

                            <columns>

                                <Column
                                    id="_IDGenColumn"
                                    visible="false"
                                >

                                    <Text
                                        id="_IDGenTextCM"
                                        text="TP Level"
                                    />

                                </Column>

                                <Column id="_IDGenColumn1">

                                    <Text
                                        id="_IDGenText1CM"
                                        text="Level"
                                    />

                                </Column>

                                <Column id="_IDGenColumn2">

                                    <Text
                                        id="_IDGenText2"
                                        text="Period ID"
                                    />

                                </Column>

                                <Column id="_IDGenColumn3">

                                    <Text
                                        id="_IDGenText3"
                                        text="Period Start"
                                        width="auto"
                                    />

                                </Column>

                                <Column id="_IDGenColumn4">

                                    <Text
                                        id="_IDGenText4"
                                        text="Period End"
                                        width="auto"
                                    />

                                </Column>

                                <Column id="_IDGenColumn5">

                                    <Text
                                        id="_IDGenText5"
                                        text="Period Desc."
                                    />

                                </Column>

                                <Column id="_IDGenColumn6">

                                    <Text
                                        id="_IDGenText6"
                                        text="Week Weight"
                                    />

                                </Column>

                                <Column id="_IDGenColumn7">

                                    <Text
                                        id="_IDGenText7"
                                        text="Month Weight"
                                    />

                                </Column>

                                <Column
                                    id="_IDGenColumn8"
                                    visible="false"
                                >

                                    <Text
                                        id="_IDGenText8"
                                        text="Week Start Date"
                                    />

                                </Column>

                                <Column
                                    id="_IDGenColumn9"
                                    visible="false"
                                >

                                    <Text
                                        id="_IDGenText9"
                                        text="Week End Date"
                                    />

                                </Column>

                                <Column
                                    id="_IDGenColumn10"
                                    visible="false"
                                >

                                    <Text
                                        id="_IDGenText10"
                                        text=""
                                    />

                                </Column>

                            </columns>

                            <items>

                                <ColumnListItem id="_IDGenColumnListItem">

                                    <cells>

                                        <Text
                                            id="_IDGenText11CM"
                                            text="{TPLEVEL} "
                                        />

                                        <Text
                                            id="_IDGenText12CM"
                                            text="{path:'LEVEL',formatter:'.formatter.formatLevel'} "
                                        />

                                        <Text
                                            id="_IDGenText13CM"
                                            text="{PERIODID}"
                                        />

                                        <!-- <Text text="{PERIODSTART}"/> -->

                                        <Text
                                            id="_IDGenText14CM"
                                            text="{path:'PERIODSTART_UTC',type:'sap.ui.model.type.Date',formatOptions:{pattern:'yyyy-MM-dd',UTC:true }}"
                                        />

                                        <!-- <Text text="{path: 'PERIODSTART_UTC', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'yyyy-MM-dd'}}"/> -->

                                        <!-- <Text text="{PERIODEND}"/> -->

                                        <Text
                                            id="_IDGenText15CM"
                                            text="{path:'PERIODEND_UTC',type:'sap.ui.model.type.Date',formatOptions:{ pattern:'yyyy-MM-dd',UTC:true }}"
                                        />

                                        <!-- <Text text="{path: 'PERIODEND_UTC', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'yyyy-MM-dd'}}"/> -->

                                        <Input
                                            id="idPeriodDesCM"
                                            type="Text"
                                            value="{PERIODDESC}"
                                            liveChange="onPeriodChange"
                                            valueState="{path:'ISDUPLICATEDESC', formatter:'.formatter.formatErrorStyle'}"
                                        />

                                        <Text
                                            id="_IDGenText16CM"
                                            text="{WEEKWEIGHT}"
                                        />

                                        <Text
                                            id="_IDGenText17CM"
                                            text="{MONTHWEIGHT}"
                                        />

                                        <!-- <Text text="{PERIODSTART_UTC}"/> -->
                                        <!--                                                                         <Text id="_IDGenText18" text="{path:'WEEK_START', type:'sap.ui.model.type.Date', formatOptions: {pattern:'yyyy-MM-dd'}}"/> -->

                                        <Text
                                            id="_IDGenText18CM"
                                            text="{WEEK_START}"
                                        />
                                        <Text
                                            id="_IDGenText19CM"
                                            text="{WEEK_END}"
                                        />
                                        <!--                                                                         <Text id="_IDGenText19" text="{path:'WEEK_END', type:'sap.ui.model.type.Date', formatOptions: {pattern:'yyyy-MM-dd'}}"/> -->

                                        <Text
                                            id="_IDGenText20CM"
                                            text="{TempID}"
                                        />

                                    </cells>

                                </ColumnListItem>

                            </items>

                        </Table>

                    </VBox>
                </IconTabFilter>
                <IconTabFilter
                    id="_IDGenIconTabFilter1CM"
                    text="Telescopic Periods"
                    key="Telescopic"
                >
                    <VBox id="_IDGenVBox2CM">
                        <Table
                            id="idTelescopicTabCM"
                            items="{path: '/results'}"
                            growingScrollToLoad="true"
                            growingThreshold="1000"
                            growing="true"
                            sticky="ColumnHeaders"
                            mode="None"
                        >
                            <infoToolbar>
                                <OverflowToolbar id="_IDGenOverflowToolbar1CM">
                                    <ToolbarSpacer id="_IDGenToolbarSpacer2CM" />
                                    <Button
                                        id="idRefreshCM"
                                        icon="sap-icon://refresh"
                                        press="onRefreshPress"
                                        type="Emphasized"
                                    />
                                </OverflowToolbar>
                            </infoToolbar>
                            <columns>
                                <Column id="_IDGenColumn14CM">
                                    <Text
                                        id="_IDGenText24CM"
                                        text="Level"
                                    />
                                </Column>
                                <Column id="_IDGenColumn11CM">
                                    <Text
                                        id="_IDGenText21CM"
                                        text="Period Start"
                                    />
                                </Column>
                                <Column id="_IDGenColumn12CM">
                                    <Text
                                        id="_IDGenText22"
                                        text="Period End"
                                    />
                                </Column>
                                <Column id="_IDGenColumn13CM">
                                    <Text
                                        id="_IDGenText23CM"
                                        text="Period Desc"
                                    />
                                </Column>

                                <!-- Add more columns as needed -->
                            </columns>
                            <items>
                                <ColumnListItem id="_IDGenColumnListItem1CM">
                                    <cells>
                                        <Text
                                            id="_IDGenText28"
                                            text="{path:'LEVEL',formatter:'.formatter.formatLevel'}"
                                        />
                                        <Text
                                            id="_IDGenText25CM"
                                            text="{path:'PERIODSTART', type:'sap.ui.model.type.Date', formatOptions:{pattern:'yyyy-MM-dd',UTC:true }}"
                                        />
                                        <Text
                                            id="_IDGenText26CM"
                                            text="{path:'PERIODEND', type:'sap.ui.model.type.Date', formatOptions:{pattern:'yyyy-MM-dd',UTC:true }}"
                                        />
                                        <Text
                                            id="_IDGenText27CM"
                                            text="{PERIODDESC}"
                                        />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </VBox>
                </IconTabFilter>
            </items>
        </IconTabBar>

        <footer>

            <OverflowToolbar
                id="_IDGenOverflowToolbarCM"
                visible="{viewModel>/showFooter}"
            >

                <u:FileUploader
                    id="FileUploaderCM"
                    fileType="XLSX,xlsx,csv"
                    buttonOnly="true"
                    class="Emp"
                    iconOnly="true"
                    change="onUpload1"
                    visible="true"
                    sameFilenameAllowed="true"
                />

                <MenuButton
                    id="idMenuSCM"
                    type="Neutral"
                    buttonMode="Split"
                    useDefaultActionOnly="true"
                    class="classOverlay"
                    defaultAction="onPressBrowse"
                    text="Upload"
                    icon="sap-icon://upload"
                >

                    <menu>

                        <Menu id="_IDGenMenuCM">

                            <MenuItem
                                id="_IDGenMenuItemCM"
                                text="Download Template"
                                press="oDownloadTemplate"
                            />

                        </Menu>

                    </menu>

                </MenuButton>

                <ToolbarSpacer id="_IDGenToolbarSpacerCM" />

                <Button
                    id="idSaveCM"
                    text="Save"
                    type="Emphasized"
                    enabled="true"
                    press="onSavePress"
                />

            </OverflowToolbar>

        </footer>

    </Page>
</mvc:View>
